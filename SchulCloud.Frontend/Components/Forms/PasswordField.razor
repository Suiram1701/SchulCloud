@{
    InputType type = PasswordVisible
        ? InputType.Text
        : InputType.Password;
    string adornmentIcon = PasswordVisible
        ? MaterialSymbols.Outlined.Visibility
        : MaterialSymbols.Outlined.VisibilityOff;
    Color adornmentIconColor = Error
        ? Color.Error
        : Color.Default;
}

<MudTextField @bind-Value="@Value"
              @bind-Value:event="@OnValueChange"
              For="For"
              Class="@Class"
              Label="@Label"
              InputType="type"
              Error="Error"
              Required="Required"
              RequiredError="@RequiredError"
              Adornment="Adornment.End"
              AdornmentIcon="@adornmentIcon"
              AdornmentColor="adornmentIconColor"
              OnAdornmentClick="ToggleVisibility_ClickAsync"
              @attributes="@AdditionalAttributes" />