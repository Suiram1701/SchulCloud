<SchulCloudPageTitle Title="@Localizer["title"]" />

<MudPaper Class="px-3 py-3">
    <MudText Class="mb-2" Typo="Typo.h6" Align="Align.Center">@Localizer["title"]</MudText>
    <MudText Typo="Typo.subtitle1" Align="Align.Center">@Localizer["desc"]</MudText>

    <MudText HtmlTag="div" Class="my-5" Align="Align.Center">
        @foreach (string code in _recoveryCodes)
        {
            <b class="mt-1">@(code)</b>
            <br />
        }
    </MudText>

    <MudStack Justify="Justify.Center" Row>
        <MudButton Color="Color.Secondary" OnClick="Download_ClickAsync">@Localizer["downloadBtn"]</MudButton>
        <MudButton Color="Color.Primary" Href="@Routes.SecurityIndex()">@Localizer["doneBtn"]</MudButton>
    </MudStack>
</MudPaper>